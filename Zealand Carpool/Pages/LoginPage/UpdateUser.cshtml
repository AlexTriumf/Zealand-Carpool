@page
@model Zealand_Carpool.Pages.LoginPage.UpdateUserModel
@{
}

<div class="container">
    <div class="row">
        <div class="col">

        </div>
        <div class="col-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label class="form-text">Fornavn</label>
                    <input asp-for="@Model.UpdateUser.Name" class="form-control" />
                    <span asp-validation-for="@Model.UpdateUser.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-text">Efternavn</label>
                    <input asp-for="@Model.UpdateUser.Surname" class="form-control" />
                    <span asp-validation-for="@Model.UpdateUser.Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-text">Telefonnummer</label>
                    <input asp-for="@Model.UpdateUser.Phonenumber" class="form-control" />
                    <span asp-validation-for="@Model.UpdateUser.Phonenumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-text">Email</label>
                    <input type="email" asp-for="@Model.UpdateUser.Email" class="form-control" />
                    <span asp-validation-for="@Model.UpdateUser.Email" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label class="form-text">Vejnavn</label>
                            <input asp-for="@Model.Address1.StreetName" class="form-control" />
                            <span asp-validation-for="@Model.Address1.StreetName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label class="form-text">Vejnummer</label>
                            <input asp-for="@Model.Address1.StreetNumber" class="form-control" />
                            <span asp-validation-for="@Model.Address1.StreetNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label class="form-text">Postnummer</label>
                            <select class="form-control" name="PostalCode" asp-for="@Model.PostalCode" asp-items="@Model.PostalCodes"></select>
                            <span asp-validation-for="@Model.Address1.Postalcode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label class="form-text">By</label>
                            <input asp-for="@Model.Address1.CityName" class="form-control" />
                            <span asp-validation-for="@Model.Address1.CityName" class="text-danger"></span>
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <label class="form-text">Password</label>
                    <input type="password" asp-for="@Model.UpdateUser.Password" class="form-control" />
                    <span asp-validation-for="@Model.UpdateUser.Password" class="text-danger"></span>
                </div>
                
                <div style="padding:1rem;"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="@Model.UpdateUser.Id"/>
                    <input type="submit" class="btn btn-success float-right" value="Updater bruger" style="padding:1rem;" />
                </div>
            </form>
        </div>
        <div class="col">

        </div>
    </div>
