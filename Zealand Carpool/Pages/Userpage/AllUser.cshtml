@page "{id?}"
@model Zealand_Carpool.Pages.Userpage.AllUserModel
@{
}

<div class="container">
    <div class="form-group">
        <input asp-for="@Model.UserInput" placeholder="Søg på et navn.." class="form-group"/>
        <button type="submit" asp-page="/Userpage/AllUser" asp-route-id="@Model.UserInput" class="btn-primary">Søg
        </button>
    </div>
    @if(Model.ListOfUsers != null) 
    { 
    @foreach (var user in Model.ListOfUsers)
    {
        <div class="card" style="width: 300px">
            <img class="card-img-top" src="img/img_avatar1.png" alt="Card image"/>
            <div class="card-body">
                <h4 class="card-title">
                    <a asp-page="/Userpage/VisitUsersProfile" asp-route-id="@user.Id">
                        @user.Name @user.Surname
                    </a>
                </h4>
            </div>
        </div>
    }

    }
</div>