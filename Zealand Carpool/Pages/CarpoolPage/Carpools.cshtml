@page
@{@using System.Globalization
@model Zealand_Carpool.Pages.CarpoolPage.CarpoolsModel
}
<head runat="server">
    <title>Map</title>
    <meta name="viewport" content="initial-scale=1.0">
    <meta charset="utf-8">
    <style>

        #map {
            height: 150px;
            /*            width: 400px;
            margin-left: 60%*/
            margin: auto;
        }
    </style>
</head>
<div class="container">

    <div class="text-center">
        <form method="post" class="row">

            <div class="col-auto">
                <label>Søg</label>
            </div>
            <div class="col">

                <input type="text" asp-for="@Model.Search" class="form-control" placeholder="Søg i Afdeling eller Adresse (skal udfyldes)">

            </div>
            <div class="col">
                <input asp-for="@Model.Date" class="form-control" />
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-primary mb-3">Søg</button>
            </div>

        </form>
    </div>

    @foreach (Models.Carpool carpool in Model.AllCarpools.Values)
    {
        <div class="shadow p-3 mb-5 bg-white rounde">
            <div class="row">
                <div class="col">
                    <h3>Kør med @carpool.Driver.Name @carpool.Driver.Surname</h3>
                    <div id="map"></div>
                </div>
                <div class="col">
                    <p>Adresse: @carpool.Driver.AddressList[0].StreetName @carpool.Driver.AddressList[0].StreetNumber, @carpool.Driver.AddressList[0].CityName @carpool.Driver.AddressList[0].Postalcode</p>
                    <p>Til Afdellingen i @carpool.Branch.BranchName</p>
                    <p>Til Dato & tidspunkt: @carpool.Date.ToString()</p>

                </div>


                <div class="col">
                    <a class="btn btn-info" type="button" asp-page="/CarpoolPage/RequestCarpooling" asp-route-id="@carpool.CarpoolId">Kør med!</a>
                </div>
            </div>
            <br />
        </div>

                    <script>
        function InitializeMap() {

            var latlng = new google.maps.LatLng(@carpool.Driver.AddressList[0].Latitude.ToString(new CultureInfo("en-US")), @carpool.Driver.AddressList[0].Longtitude.ToString(new CultureInfo("en-US")));

            var myOptions = {
                zoom: 12,
                center: latlng,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            };

            var map = new google.maps.Map(document.getElementById("map"), myOptions);

            new google.maps.Marker({
                position: latlng,
                map,
                title: "Zealand Roskilde",
            });

        }
                    </script>

                    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC2t8TFM7VJY_gUpk45PYxbxqqxPcasVho&callback=InitializeMap" async defer></script>
    }
</div>

